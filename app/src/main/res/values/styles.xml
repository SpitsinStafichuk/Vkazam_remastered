<resources>

    <!-- Base application theme. -->
    <style name="VkazamTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/VkazamActionBar</item>
        <item name="android:windowBackground">@color/violet_light_graylish</item>
    </style>

    <!-- ActionBar styles -->
    <style name="VkazamActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/violet_moderate</item>
    </style>

    <style name="DrawerTextPrimary" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/gray_dark_very</item>
    </style>

    <style name="DrawerTextSecondary" parent="android:TextAppearance.Holo.Small">
        <item name="android:textColor">@color/gray_dark_very</item>
    </style>

    <style name="DrawerTextProfilePrimary" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DrawerTextProfileSecondary" parent="android:TextAppearance.Holo.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SongShortInfoPrimaryText" parent="android:TextAppearance.Holo.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_dark_very</item>
    </style>

    <style name="SongShortInfoSecondaryText" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/gray_dark_very</item>
    </style>

    <style name="SongShortInfoOptionalText" parent="android:TextAppearance.Holo.Small">
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
